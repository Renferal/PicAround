<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"> </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitCenter"
            android:background="@color/cardview_dark_background"/>

        <RelativeLayout
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/picture">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_icon"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="@color/primary_text_black"/>

            <!--<TextView-->
                <!--android:id="@+id/user_fullname"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toRightOf="@id/user_icon"-->
                <!--android:layout_below="@id/username"-->
                <!--android:layout_marginStart="10dp"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/secondary_text_black"-->
                <!--android:text="Danilo Bernardini, 24"/>-->

        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:textSize="16sp"
            android:textColor="@color/secondary_text_black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <LinearLayout
            android:id="@+id/views_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:layout_below="@id/description">

            <TextView
                android:id="@+id/views"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/likes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/views_likes"
            android:gravity="center"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/popularity"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:visibility="invisible"
            android:tint="@color/secondary_text_black"
            android:src="@drawable/ic_thumb_up_black_36dp"/>


    </RelativeLayout>

</LinearLayout>