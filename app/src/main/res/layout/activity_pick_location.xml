
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content" android:layout_height="wrap_content" >

    <include layout="@layout/toolbar"
        android:id="@+id/include_toolbar_pick_location"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.project.pervsys.picaround.PickLocationActivity"
        android:layout_below="@id/include_toolbar_pick_location" />

    <ImageView
        android:id="@+id/marker_centered"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/map_marker_bubble_green"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/pick_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/com_facebook_button_like_icon_selected"
        map:fabSize="normal"
        map:layout_anchorGravity="bottom|right"
        map:useCompatPadding="true" />

</RelativeLayout>
